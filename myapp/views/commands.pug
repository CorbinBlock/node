extends layout

block layout-content
  div.View.UserView
    h1.Banner #{userProfile.nickname}'s command interface
    div.Message
      div.Title
        h3 Execute commands under
        h1 user account:
      pre.Details=JSON.stringify(userProfile, null, 2)
    div.NavButtons
      a(href="/list_files")
        div.NavButton Execute Shell
    div.NavButtons
      a(href="/links")
        div.NavButton View Links
    div.NavButtons
      a(href="/work_links")
        div.NavButton View Work Links
    div.NavButtons
      a(href="/logout")
        div.NavButton Log out